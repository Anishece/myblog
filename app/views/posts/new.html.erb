<h1>Add a new Post</h1>
<%= form_for @post do |f|%>
  <p>
      <%= f.label :title %><br />
	  <%= f.text_field :title %><br />
  </p>
  <p>
      <%= f.label :body %><br />
	  <%= f.text_area :body %><br />
  </p>
  <p>  
      <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]},{:inhclude_blank => "Select One"}%><br /> 
  </p>
  <p>
     <%= f.submit "Add Post" %><br />
 </p>
<% end %>
